###########
# Servidor
###########
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

############
# Base de datos
############
# URL completa de conexión a PostgreSQL (Neon)
DATABASE_URL=postgresql://usuario:password@host/neondb?sslmode=require
# Usa 'true' únicamente cuando el proveedor requiera SSL explícito
DB_SSL=true

###########
# Seguridad
###########
JWT_SECRET=cambia_este_valor_por_uno_seguro

##################
# Rate Limiting
##################
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

##########
# Stripe
##########
STRIPE_SECRET_KEY=tu_clave_secreta_de_stripe
STRIPE_WEBHOOK_SECRET=tu_webhook_secret_de_stripe
STRIPE_SUCCESS_URL=http://localhost:3000/checkout/success
STRIPE_CANCEL_URL=http://localhost:3000/checkout/cancel
FRONTEND_URL=http://localhost:3000

############
# Dolibarr
############
DOLIBARR_ENABLED=true
DOLIBARR_URL=https://tuinstancia.dolibarr
# Opción 1: Autenticación con API Key
DOLIBARR_API_KEY=
DOLIBARR_API_SECRET=
# Opción 2: Usuario/contraseña (si no usas API key)
DOLIBARR_API_USER=
DOLIBARR_API_PASSWORD=
# Control de sincronizaciones automáticas en rutas (productos/órdenes)
DOLIBARR_AUTO_SYNC=true
# ID del almacén destino para movimientos de inventario
DOLIBARR_DEFAULT_WAREHOUSE_ID=1
# Polling automático: sincronización desde Dolibarr cada X minutos
DOLIBARR_POLLING_ENABLED=true
DOLIBARR_POLLING_INTERVAL=15
DOLIBARR_POLLING_RUN_ON_START=true

############
# Otros
############
VERCEL=false

